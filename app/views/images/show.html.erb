<a href="<%= gallery_path(@gallery) %>">Back to <%= @gallery.name %> Gallery</a>

<h1><%= @image.name %> Image</h1>

<h3>Image by: <%= @image.user.email %></h3>

<h2><%= @image.description %></h2>

<ul>
  <li>
    <a href="<%= edit_gallery_image_path(@gallery, @image) %>">Edit This Image</a>
  </li>
  <li>
    <%= link_to "Delete Image", [@gallery, @image], method: :delete, data: { confirm: "Are you sure you want to delete #{@image.name}?" } %>
  </li>
</ul>

<div>
  <img src="<%= @image.url %>">
</div>

<h2>Comments:</h2>

<%= render(@image.comments) || "There are no comments yet." %>

<%= form_for ([@image, @comment]) do |form| %>

  <br>
  <div>
    <%= form.label "Comment:" %>
  </div>

  <div>
    <%= form.text_field :contents %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>
