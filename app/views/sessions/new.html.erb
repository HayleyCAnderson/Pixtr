<h2>Sign In</h2>

<%= form_for :session, url: session_path do |form| %>

  <% if request.post? %>
    <p>There was a problem logging you in. Try again.</p>
  <% end %>

  <div class="email_input">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="password_input">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="submit">
    <%= form.submit "Sign in" %>
  </div>
  
<% end %>
