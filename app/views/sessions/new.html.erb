<%= form_for :session, url: session_path do |form| %>

  <% if request.post? %>
    <p>There was a problem logging you in. Try again.</p>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Sign in" %>
  </div>
<% end %>
